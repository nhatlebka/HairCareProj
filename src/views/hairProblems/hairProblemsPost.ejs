        <%- include('../layouts/footer') %>
       <script>
           var postMain = $('.post-main')
           var id = postMain.data('id');
           var relatedStories = $('.related-stories');
           var type = relatedStories.data('type').split(',');
           var formComment = $('.form-comment')
           var formSubmit = $('.form-submit')
           var nameInput = $('.name')
           var emailInput = $('.email')
           var messageInput = $('.message') 
           var listComments = $('.list-comments');
           var recentArticles = $('.recent-articles-list');

            //Render recent articles
            $.ajax({
                    url: '/hair-problems/post-list-sortbydate',
                    method: 'GET',
                    success: function (rs) {
                        let count = 0
                        for (let i = 0; i < 4; i++) {
                            if (rs[i]) {
                                recentArticles.append(`
                                <li class="recent-articles-item">
                                    <div class="recent-articles-item-img">
                                        <a href="/hair-problems/${rs[i].slug}">
                                            <img src="${rs[i].image}" class="d-block" width="100%" />
                                        </a>
                                    </div>
                                    <div class="recent-articles-item-info">
                                        <a href="/hair-problems/${rs[i].slug}">${rs[i].title}</a>
                                        <p>${moment(rs[i].date).format('ll')}</p>
                                    </div>
                                </li>
                            `)
                            }
                        }
                    }

                })
            
            //GET list comments
           $.ajax({
               url: '/hair-problems/list-comments',
               method: 'GET',
               data:{
                postId: id,
               },
               success: function(rs) {
                //    console.log(rs);
                   if (!rs) {
                    listComments.html('<h1 class="post-count-comment">0 Comments</h1>')
                   } else {
                        listComments.html(`<h1 class="post-count-comment">${rs.length} Comments</h1>`)
                        for(let i = 0; i < rs.length; i++) {
                            listComments.append(`
                                <div class="comment">
                                    <p class="post-text text-comment">${moment(rs[i].createdAt).format('ll')}</p>
                                    <p class="text-center text-comment"><b>${rs[i].name}</b></p>
                                    <p class="text-center text-comment">${rs[i].message}</p>
                                </div>
                            `)
                        }
                        }
               }
           })

           //GET related STORIES
           $.ajax({
               url: '/hair-problems/related-post',
               method: 'GET',
               data: {
                   type: type,
               },
               success: function(rs) {
                    relatedStories.html('');
                    let dem = 0;
                    for(let i = 0; i < rs.length; i++) {
                        if ((dem<4) && (rs[i]._id != id)) {
                            dem ++;
                            var listType = ''
                            rs[i].type.forEach(element => {
                            listType += `<a href="/hair-problems?type=${element}"> ${element}&nbsp;</a>`
                            });
                            relatedStories.append(`
                            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
                                <div class="related-item">
                                    <div class="post-info text-center">
                                        <div class="post-info-img"><a href="/hair-problems/${rs[i].slug}">
                                            <img src="${rs[i].image}" alt="" width="100%">
                                            </a>
                                        </div>
                                        <a href="/hair-problems/${rs[i].slug}" class="post-heading">${rs[i].title}</a>
                                        <p class="post-des">${rs[i].description}</p>
                                        <p class="post-types"><i class="fas fa-tags"></i>
                                            ${listType}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            `)
                        }
                    }
               }
           })

           //GET post content
           $.ajax({
               url: '/hair-problems/post-content?id=' +id, 
               method: 'GET',
               success: function(data) {
                   postMain.html(data[0].content)
               }
           })
           nameInput.click(function() {
               $('#required-name').css('display', 'none')
           })

           emailInput.click(function() {
               $('#required-email').css('display', 'none')
           })

           messageInput.click(function() {
               $('#required-message').css('display', 'none')
           })

           formSubmit.click(function (e) {
               e.preventDefault();
                var name = nameInput.val()
                var email = emailInput.val()
                var message = messageInput.val()

                if (!name) { $('#required-name').css('display', 'block') }
                if (!email) { $('#required-email').css('display', 'block') }
                if (!message) { $('#required-message').css('display', 'block') }

                if ((name) && (email) && (message)) {
                    $.ajax({
                    url: "/hair-problems/post-comment",
                    method: "POST",
                    data: {
                        postId: id,
                        name: name,
                        email: email,
                        message: message
                    },
                    success: function(rs) {
                        if (!rs) {
                            listComments.html('<h1 class="post-count-comment">0 Comments</h1>')
                        } else {
                            listComments.html(`<h1 class="post-count-comment">${rs.length} Comments</h1>`)
                            for(let i = 0; i < rs.length; i++) {
                                listComments.append(`
                                    <div class="comment">
                                        <p class="post-text text-comment">${moment(rs[i].createdAt).format('ll')}</p>
                                        <p class="text-center text-comment"><b>${rs[i].name}</b></p>
                                        <p class="text-center text-comment">${rs[i].message}</p>
                                    </div>
                                    `)
                                }
                            }
                        }
                    })
                    nameInput.val('');
                    emailInput.val('');
                    messageInput.val('');
                }
                
                
           })
       </script>
    </body>
