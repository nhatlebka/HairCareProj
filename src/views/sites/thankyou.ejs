            <style>
                #customerForm {
                    /* background-color: #ffffff;
                    margin: 100px auto; */
                    font-family: "Open Sans";
                    /* padding: 40px;
                    width: 70%;
                    min-width: 300px; */
                    min-height: 500px;
                    z-index: 0;
                }

                #customerForm h1 {
                    text-align: center;
                }

                #customerForm input {
                    padding: 10px;
                    width: 100%;
                    font-size: 17px;
                    font-family: "Open Sans";
                    border: 1px solid #aaaaaa;
                }

                /* Mark input boxes that gets an error on validation: */
                #customerForm select.invalid,
                #customerForm input.invalid {
                    background-color: #ffdddd;
                }

                /* Hide all steps by default: */
                #customerForm .tab {
                    display: none;
                }

                #customerForm button {
                    background-color: #04AA6D;
                    color: #ffffff;
                    border: none;
                    padding: 10px 20px;
                    font-size: 17px;
                    font-family: "Open Sans";
                    cursor: pointer;
                }

                #customerForm button:hover {
                    opacity: 0.8;
                }

                #customerForm #prevBtn {
                    background-color: #bbbbbb;
                }

                /* Make circles that indicate the steps of the form: */
                /* .step { */
                /* height: 15px;
                    width: 15px;
                    margin: 0 2px; */
                /* background-color: #bbbbbb; */
                /* border: none; */
                /* border-radius: 50%; */
                /* display: inline-block; */
                /* opacity: 0.5; */
                /* } */

                /* .step.active { */
                /* opacity: 1; */
                /* } */

                /* Mark the steps that are finished and valid: */
                .step.finish {
                    /* background-color: #04AA6D; */
                    color: green;
                }

                #progress {
                    counter-reset: step;
                    /* display: flex;
                    justify-content: space-between; */
                }

                #progress li {
                    list-style-type: none;
                    /* float: left; */
                    width: 25%;
                    position: relative;
                    text-align: center;
                    font-size: 20px;
                }

                #progress li::before {
                    content: counter(step);
                    counter-increment: step;
                    width: 30px;
                    height: 30px;
                    line-height: 25px;
                    border: 2px solid #ccc;
                    display: block;
                    text-align: center;
                    margin: 0 auto 10px auto;
                    border-radius: 50%;
                    background-color: #fff;
                }

                #progress li::after {
                    content: '';
                    width: 100%;
                    height: 2px;
                    background-color: #ccc;
                    position: absolute;
                    top: 15px;
                    left: -50%;
                    z-index: -1;
                }

                #progress li:first-child::after {
                    content: none;
                }

                #progress li.active {
                    color: green;
                }

                #progress li.active::before {
                    border-color: green;
                    transition: all linear 0.5s;
                }

                #progress li.active::after {
                    background-color: green;
                    transition: all linear 0.5s;
                }

                #progress li.finish::before {
                    border-color: green;
                    color: white;
                    background-color: green;
                    font-family: "Font Awesome 5 Pro";
                    content: "\f00c";
                    transition: all linear 0.5s;
                }

                #progress li.finish::after {
                    background-color: green;
                }
            </style>
    </head>

